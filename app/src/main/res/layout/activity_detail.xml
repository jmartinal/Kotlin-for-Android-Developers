<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/activity_detail"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jmartinal.kotlinakademy.DetailActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/detail_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        tools:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/detail_video_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play_circle_outline"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/detail_thumb"
        app:layout_constraintEnd_toEndOf="@+id/detail_thumb"
        app:layout_constraintStart_toStartOf="@+id/detail_thumb"
        app:layout_constraintTop_toTopOf="@+id/detail_thumb"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>